extends layout 
block content 
  h1= title 
  form(method='POST' action='')
    .form-group 
      label(for='name') Name: 
      input#name(type='text' placeholder='Name of Item', name='name' required='true' value=(undefined==item ? '' : item.name))
    .form-group 
      label(for='description') Description: 
      textarea#description(type='textarea' placeholder='Item Description' name="description", cols="30", rows="10") #{undefined===item ? '' : item.description}
    .form-group 
      label(for='category') Category: 
      for category in categories 
        div(style='display: inline; padding-right: 10px;')
          input.checkbox-input(type='checkbox' name='category' id=category._id value=category._id checked=category.checked)
          label(for=category._id) #{category.name}
    .form-group 
      label(for='price') Price: 
      input#price(type="number" name="price" min='0' step='.01' value=(undefined==item ? '' : item.price))
    button(type='submit') Submit 
  if errors 
    ul 
     for error in errors 
      li!= error.msg 
    