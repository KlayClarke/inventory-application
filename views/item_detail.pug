extends layout 

block content 
  h1 #{item.name}
  h2 #{item_instances.length} in stock
  p #[strong Description:] #{item.description}
  p #[strong Price:] $#{item.price} 
  p #[strong Category:] 
    each val, index in item.category
      a(href=val.url) #{val.name}
        if index < item.category.length - 1
          |,
  .item-instances-container 
    each item in item_instances
      p 
        a(href=item.url) #{item._id} 
    else 
      p There are no instances of this item in storage 
  hr
  p 
    a(href=item.url+'/update') Update Item 
  p 
    a(href=item.url+'/delete') Delete Item 
      